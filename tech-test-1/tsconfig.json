{
  "compilerOptions": {
    "outDir": "./dist", 
    "target": "es5",    
    "module": "es6",    
    "jsx": "react",     
    "compilerOptions": {
      "types": ["jest", "@testing-library/jest-dom"]
    },
    "noImplicitAny": true, 
    "allowSyntheticDefaultImports": true, 
    "moduleResolution": "node", 
    "baseUrl": ".",     
    "paths": {          
      "@/*": ["src/*"]
    },
    "strict": true,     
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"] 
}
